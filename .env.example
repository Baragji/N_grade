# Application settings
# Configure the HTTP port exposed by docker-compose.
APP_PORT=8080
# Set environment name for runtime toggles.
APP_ENV=development
# Secret key placeholder for local sessions.
APP_SECRET_KEY=change_me_securely
# Database configuration
# PostgreSQL database name for local development.
POSTGRES_DB=phase0_db
# PostgreSQL username; replace in production.
POSTGRES_USER=phase0_user
# PostgreSQL password stored securely in secrets manager.
POSTGRES_PASSWORD=phase0_password
POSTGRES_HOST=postgres
POSTGRES_PORT=55432
# Redis cache configuration
# Redis hostname inside docker network.
REDIS_HOST=redis
# Redis port forwarded to the host.
REDIS_PORT=56379
# Redis password ensures access control.
REDIS_PASSWORD=phase0_redis_password
# Search configuration
MEILISEARCH_HOST=meilisearch
MEILISEARCH_PORT=57700
MEILISEARCH_MASTER_KEY=phase0_master_key
# Observability and telemetry
LOG_LEVEL=info
SENTRY_DSN=https://example.ingest.sentry.io/12345
# Governance and compliance
CI_COMMIT_SIGNING=required
COMPLIANCE_MODE=enabled
SECURITY_SCAN_LEVEL=high
HEALTHCHECK_TIMEOUT=5
